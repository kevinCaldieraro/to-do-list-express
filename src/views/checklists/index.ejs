<!DOCTYPE html>
<html lang="en">
  <%- include('../layouts/head', { title: 'Checklists'}) %>
  <body>
    <%- include('../layouts/menu') %>
    <section class="section">
      <div class="container">
        <div class="columns">
          <div class="column is-four-fifths">
            <h1 class="title size-4">Checklists</h1>
          </div>
          <div class="column is-one-fifth">
            <a href="checklist-form.html" class="button is-success is-small"
              >New Checklist</a
            >
          </div>
        </div>
        <div class="columns is-multiline">
          <% checklists.forEach(checklist => { %>
          <div class="column is-one-quarter">
            <div class="card has-background-white-ter">
              <div class="card-content">
                <p class="subtitle is-size-5"><%= checklist.title %></p>
                <p class="subtitle is-size-6">
                  <%= checklist.tasks.length %> Tasks
                </p>
              </div>
              <footer class="card-footer">
                <p class="card-footer-item">
                  <span>
                    <a href="/checklists/<%= checklist._id %>">Show</a>
                  </span>
                </p>
                <p class="card-footer-item">
                  <span>
                    <a href="checklist-form.html">Edit</a>
                  </span>
                </p>
                <p class="card-footer-item">
                  <span>
                    <a href="#" class="has-text-danger">Delete</a>
                  </span>
                </p>
              </footer>
            </div>
          </div>
          <% })%>
        </div>
      </div>
    </section>
  </body>
</html>
